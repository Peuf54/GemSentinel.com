<header>
  <%= link_to root_path do %>
    <img src="https://i.ibb.co/0CyhSh8/logo-Copie.png" alt="logo GemSentinel">
  <% end %>
  <div class="logout-container">
    <% if current_user %>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "button btn-logout" do %>
        <% concat content_tag(:i, "", class: "fa-solid fa-right-from-bracket", style:"color: #9E0000;") %>
      <% end %>
    <% end %>
  </div>
</header>
